{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/assets/*", "/images/*", "/data/*", "/api/*"]
  },
  "mimeTypes": {
    ".json": "application/json"
  },
  "routes": [
    { "route": "/api/*", "allowedRoles": ["anonymous"], "headers": { "Cache-Control": "no-store" } },

    { "route": "/*.{html}", "headers": { "Cache-Control": "no-store" } },

    { "route": "/data/*.{json,geojson,csv,ndjson,txt}", "headers": { "Cache-Control": "public, max-age=86400" } },
    { "route": "/images/*", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },

    { "route": "/*.{js,css}", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "route": "/*.{png,jpg,jpeg,webp,avif,gif,svg,ico}", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "route": "/*.{woff,woff2,ttf,otf}", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },
    { "route": "/*.{mp3,mp4,webm,ogg}", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } },

    { "route": "/favicon.*", "headers": { "Cache-Control": "public, max-age=31536000, immutable" } }
  ],
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff"
  },
  "trailingSlash": "auto"
}
